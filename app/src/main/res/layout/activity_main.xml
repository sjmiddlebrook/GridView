            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/imageView6"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/imageView9"
            android:layout_gravity="center"
            android:src="@drawable/ic_launcher"/>
        <ImageView
            android:id="@+id/imageView12"
            android:layout_gravity="center"
